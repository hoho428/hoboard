<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.ho.mapper.MemberMapper">
  
  	<!-- 회원가입 -->
  	<insert id="memberJoin">
  	
  		insert into ho_member values(#{memberId}, #{memberPw}, #{memberName}, #{memberEmail}, #{memberAddr1}, #{memberAddr2}, #{memberAddr3}, 0, sysdate)

  	</insert>
  
  	<!-- 아이디 중복 검사 -->
  	<select id="idCheck" resultType="int">
  	
  		select count(*) from ho_member where memberId = #{memberId}
  	
  	</select>
  	
  	<!-- 로그인 -->
  	<select id="memberLogin" resultType="com.ho.model.MemberVO">
  		
  		select memberId, memberPw, memberName, adminCk from ho_member where memberId = #{memberId}
  		<!-- 기존 로그인 코드 
  		select memberId, memberName, adminCk from ho_member where memberId = #{memberId} and memberPw = #{memberPw}
  		-->
  		
  	</select>
  </mapper>